#include <iostream>
#include <string.h>
#include <vector>
using namespace std;

int main() {
    int n, place, cnt = 0;
    cin >> n >> place;
    vector<int> arr;

    for(int i = 0; i<n; i++) {
        int a;
        cin >> a;
        arr.push_back(a);
    }


    for(int i = 0; i<n; i++) {
        if((arr[i]>=arr[place-1]) && (arr[i]>0)) {
            cnt++;
        }
    }
    cout << cnt << endl;


    return 0;
}


