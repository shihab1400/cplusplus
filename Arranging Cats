#include <iostream>
#include <vector>
using namespace std;
int main() {
    int n;
    cin >> n;
    vector<int> ans;
    for(int i = 0; i<n; i++) {
        int a, add = 0, sub = 0;
        string x, y;
        cin >> a >> x >> y;
        for(int j = 0; j<a; j++) {
            if(x[j]=='0' && y[j]=='1') {
                add++;
            } else if(x[j]=='1' && y[j]=='0') {
                sub++;
            }
        }
        if(add==sub) {
            ans.push_back(add);
        } else if(add<sub) {
            ans.push_back(add+(sub-add));
        } else if(sub<add) {
            ans.push_back(sub+(add-sub));
        }
    }
    for(int i = 0; i<n; i++) {
        cout << ans[i] << endl;
    }
    return 0;
}
