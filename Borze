#include <iostream>
#include <map>
#include <cmath>
#include <algorithm>
#include <iterator>
#include <list>
#include <vector>
using namespace std;

int main() {
	string c;
	cin >> c;
	vector<char> arr;
	for(int i = 0; i<c.size(); i++) {
        if(c[i]=='.') {
            arr.push_back('0');
        } else {
            if(c[i+1]=='.') {
                arr.push_back('1');
            } else {
                arr.push_back('2');
            }
            i++;
        }
	}
	for(int i = 0; i<arr.size(); i++) {
        cout << arr[i];
	}




    return 0;
}
