#include <iostream>
#include <string.h>
using namespace std;

int main() {
    int n, sol = 0;
    cin >> n;

    for(int i = 0; i<n; i++) {
        int cnt = 0;
        for(int j = 0; j<3; j++) {
            int a;
            cin >> a;
            if(a==1) {
                cnt++;
            }
        }
        if(cnt>1) {
            sol++;
        }
    }
    cout << sol << endl;


    return 0;
}
