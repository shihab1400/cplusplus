#include <iostream>
#include <vector>
#include <set>
#include <algorithm>
using namespace std;
int main() {
    string arr[2] = {"I hate", "I love"};
    int n;
    cin >> n;
    for(int i = 1; i<=n; i++) {
        if(n==1) {
            cout << "I hate ";
        }
        if((n>1)&&(i%2==0)&&(i!=n)) {
            cout << "I love that ";
        } else if((n>1)&&(i%2!=0)&&(i!=n)) {
            cout << "I hate that ";
        }
        if((n>1)&&(i%2==0)&&(i==n)) {
            cout << "I love ";
        } else if((n>1)&&(i%2!=0)&&(i==n)) {
            cout << "I hate ";
        }
    }
    cout << "it" << endl;

    return 0;
}

