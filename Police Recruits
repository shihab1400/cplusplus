#include <iostream>
#include <iomanip>
#include <cmath>
#include <vector>
#include <list>
#include <set>
#include <iterator>
#include <utility>
#include <algorithm>
using namespace std;

int main() {

    int n, s = 0, c = 0, p = 0;
    cin >> n;
    int arr[n];
    for(int i = 0; i<n; i++) {
        cin >> arr[i];
        if(arr[i]==-1) {
            p++;
        }
        if(arr[i]>0) {
            s+=arr[i];
        }
        if(arr[i]<0 && s>0) {
            s--;
            c++;
        }
    }
    cout << p-c << endl;


    return 0;
}












