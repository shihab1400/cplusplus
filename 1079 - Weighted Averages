#include <stdio.h>
#include <iostream>
#include <iomanip>
#include <cmath>
#include <string>
#include <vector>
#include<ios>
#include<limits>
using namespace std;



int main() {
   int n;
   double a, b, c;
   cin >> n;
   double arr[n];
   for(int i = 0; i<n; i++) {
       cin >> a >> b >> c;
       arr[i] = (a*2 + b*3 + c*5)/10;
   }
   for(int i = 0; i<n; i++) {
       cout << fixed << setprecision(1) << arr[i] << endl;
   }




   return 0;
}
