#include <iostream>
#include <map>
#include <cmath>
#include <algorithm>
#include <iterator>
#include <list>
using namespace std;

int main() {
	int n, s = 0, d = 0;
	cin >> n;
	list<int> arr;
	list<int>::iterator itb;
	list<int>::iterator ite;
	for(int i = 0; i<n; i++) {
        int a;
        cin >> a;
        arr.push_back(a);
	}
	int i = 0;
	while(arr.size()) {
        itb = arr.begin();
        ite = arr.end();
        ite--;
        if(i%2==0) {
            if(*itb>*ite) {
                s+=*itb;
                arr.pop_front();
            } else {
                s+=*ite;
                arr.pop_back();
            }
        } else {
            if(*itb>*ite) {
                d+=*itb;
                arr.pop_front();
            } else {
                d+=*ite;
                arr.pop_back();
            }
        }
        i++;
	}
	cout << s << " " << d << endl;



    return 0;
}
