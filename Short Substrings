#include <iostream>
#include <iomanip>
#include <cmath>
#include <vector>
#include <list>
#include <set>
#include <iterator>
#include <algorithm>
using namespace std;

int main() {

    int t;
    cin >> t;
    while(t--) {
        string s;
        cin >> s;
        vector<char> arr;
        for(int i = 0; i<s.size(); i++) {
            if(i==0 || i==s.size()-1) {
                arr.push_back(s[i]);
            } else {
                arr.push_back(s[i]);
                i++;
            }
        }
        for(int i = 0; i<arr.size(); i++) {
            cout << arr[i];
        }
        cout << endl;
    }

    return 0;
}
