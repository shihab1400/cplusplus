#include <iostream>
#include <map>
#include <cmath>
#include <algorithm>
#include <iterator>
#include <list>
using namespace std;

int main() {
	int t;
	cin >> t;
	while(t--) {
        int n, p;
        cin >> n;
        int arr[n];
        for(int i = 0; i<n; i++) {
            cin >> arr[i];
        }
        if(arr[0]==arr[1]) {
            for(int i = 0; i<n; i++) {
                if(arr[0]!=arr[i]) {
                    p = i+1;
                    break;
                }
            }
        } else {
            if(arr[0]==arr[2]) {
                p = 2;
            } else {
                p = 1;
            }
        }
        cout << p << endl;
	}



    return 0;
}
