#include <iostream>
#include <string.h>
#include <vector>
using namespace std;

int main() {
    int n, X = 0;
    cin >> n;
    string o;
    for(int i = 0; i<n; i++) {
        cin >> o;
        if((o == "++X") || (o == "X++")) {
            X++;
        } else {
            X--;
        }
    }

    cout << X << endl;

    return 0;
}


