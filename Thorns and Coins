#include <iostream>
#include <iomanip>
#include <vector>
#include <algorithm>
#include <cmath>
using namespace std;

int main() {
    int t;
    cin >> t;
    while(t--) {
        int n, ch = 0, p = 0;
        cin >> n;
        string g;
        cin >> g;
        for(int i = 0; i<n; i++) {
            if(g[i]=='*' && g[i+1]=='*') {
                break;
            }
            if(g[i]=='@') {
                p++;
            }
        }
        cout << p << endl;
    }


    return 0;
}

