#include <iostream>
#include <map>
#include <cmath>
#include <algorithm>
#include <iterator>
#include <list>
#include <set>
#include <vector>
using namespace std;

int main() {

    int t;
    cin >> t;
    while(t--) {
        vector<int> arr;
        int n;
        cin >> n;
        int i = 1;
        while(arr.size()!=n) {
            if(i%3==0 || i%10==3) {
                i++;
                continue;
            }
            arr.push_back(i);
            i++;
        }
        cout << arr[arr.size()-1] << endl;
        arr.clear();
    }


    return 0;
}
