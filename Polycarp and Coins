#include <stdio.h>
#include <iostream>
#include <iomanip>
#include <cmath>
#include <string>
#include <vector>
#include<ios>
#include<limits>
using namespace std;



int main() {
    int t;
    cin >> t;
    while(t--) {
        long long int n, x, y;
        cin >> n;
        if(ceil(n/3.0)+floor(n/3.0)*2==n) {
            x = ceil(n/3.0);
            y = floor(n/3.0);
        } else {
            y = ceil(n/3.0);
            x = floor(n/3.0);
        }
        cout << x << " " << y << endl;

    }




   return 0;
}
