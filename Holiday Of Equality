#include <iostream>
#include <map>
#include <cmath>
#include <algorithm>
#include <iterator>
#include <list>
#include <set>
#include <vector>
using namespace std;

int main() {
	int n, lg, s = 0;
	cin >> n;
	int arr[n];
	cin >> arr[0];
	lg = arr[0];
	for(int i = 1; i<n; i++) {
        cin >> arr[i];
        if(lg<arr[i]) {
            lg = arr[i];
        }
	}
	for(int i = 0; i<n; i++) {
        s+=lg-arr[i];
	}
    cout << s;



    return 0;
}
