#include <iostream>
#include <string>
#include <vector>
using namespace std;

int main()
{
    int year;
    cin >> year;
    while(true) {
        year++;
        int temp = year;
        vector<int> sep;
        while(temp!=0) {
            sep.push_back(temp%10);
            temp/=10;
        }
        int p = 0;
        for(int i = 0; i<sep.size(); i++) {
            for(int j = 0; j<sep.size(); j++) {
                if(i==j) {
                    continue;
                }
                if(sep[i]==sep[j]) {
                    p = 1;
                    break;
                } else {
                    p = 3;
                }
            }
            if(p==1) {
                break;
            }
        }
        if(p==3) {
            break;
        }
    }
    cout << year << endl;
    return 0;
}
