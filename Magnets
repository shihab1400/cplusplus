#include <iostream>
#include <string>
#include <vector>
using namespace std;

int main() {
    int n, cnt = 0;
    cin >> n;
    vector<int> m;
    for(int i = 0; i<n; i++) {
        int p;
        cin >> p;
        m.push_back(p);
    }
    for(int i = 0; i<n; i++) {
        if(m[i]!=m[i+1]) {
            cnt++;
        }
    }

    cout << cnt << endl;


    return 0;
}
