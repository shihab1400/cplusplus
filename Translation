#include <vector>
#include <iostream>
#include <cmath>
using namespace std;


int main() {
    string word1, word2;
    cin >> word1 >> word2;
    bool rev = true;
    int j = word2.size()-1;
    for(int i = 0; i<word1.size(); i++) {
        if(word1[i]!=word2[j]) {
            rev = false;
        }
        j--;
    }
    if(rev == true) {
        cout << "YES" << endl;
    } else {
        cout << "NO" << endl;
    }
    return 0;
}
