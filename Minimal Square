#include <stdio.h>
#include <iostream>
#include <iomanip>
#include <cmath>
#include <string>
#include <vector>
#include<ios>
#include<limits>
using namespace std;



int main() {
    int t;
    cin >> t;
    while(t--) {
        int x, y;
        cin >> x >> y;
        if(x<y) {
            if(x*2>=y) {
                cout << 4*x*x << endl;
            } else {
                cout << y*y << endl;
            }
        } else {
            if(y*2>=x) {
                cout << 4*y*y << endl;
            } else {
                cout << x*x << endl;
            }
        }
    }




   return 0;
}
